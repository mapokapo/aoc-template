  "license": "MIT",
  "keywords": [
    "advent of code",
    "aoc",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mapokapo/aoc-template.git"
  },
  "bugs": {
    "url": "https://github.com/mapokapo/aoc-template/issues"
  },
  "homepage": "https://github.com/mapokapo/aoc-template#readme",
  "main": "index.js",
  "type": "module",
  "scripts": {
